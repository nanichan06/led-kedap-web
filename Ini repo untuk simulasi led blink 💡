<body>

  <div class="led" id="led"></div>
  <h1>LED Kedap-Kedip üí°</h1>
  <button class="button" onclick="toggleBlink()">‚ñ∂Ô∏è Start / ‚è∏Ô∏è Stop</button>

  <script>
    const led = document.getElementById('led');
    let blinking = false;
    let interval;

    function toggleBlink() {
      blinking = !blinking;
      if (blinking) {
        interval = setInterval(() => {
          led.classList.toggle('on');
        }, 500); // 0.5 detik
      } else {
        clearInterval(interval);
        led.classList.remove('on');
      }
    }
  </script>
